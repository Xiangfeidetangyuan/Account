<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ShowFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <Button
            android:id="@+id/choosebt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日期选择"
            android:background="@drawable/selector_loginactivity_button"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/choosebt"
            android:id="@+id/line_choose"
            android:gravity="center">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/lfbt"
                android:src="@drawable/left2" />

            <TextView
                android:id="@+id/tv_output"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:textSize="24sp"
                android:gravity="center" />
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/rgbt"
                android:src="@drawable/right" />
        </LinearLayout>

        <ListView
            android:id="@+id/listviewforaccount"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/line_choose">


        </ListView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_40"
            android:layout_marginBottom="56dp"
            android:src="@drawable/add"
            android:backgroundTint="@color/color_minefragment_top"
            app:rippleColor="@color/gray"
            />

    </RelativeLayout>

</FrameLayout>